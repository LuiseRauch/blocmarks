<h1>Edit Bookmark</h1>
<div class="row">
  <div class="form-inline">
    <%= form_for [@bookmark.topic, @bookmark] do |f| %>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>  
