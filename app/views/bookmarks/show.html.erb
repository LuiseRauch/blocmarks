
<h1><%= @bookmark.url %><%= render partial: 'likes/like', locals: { bookmark: @bookmark } %></h1>
<%= link_to "Edit", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: 'btn btn-success btn-sm' %>
<%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
<%= link_to "Back to Topic", topic_path(@bookmark.topic, @bookmark), class: 'btn btn-success btn-sm' %>
