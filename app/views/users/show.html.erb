      <div class="col-md-12">
        <strong><%= topic.title %></strong><br />

      </div>
    <% end %>
</div>
<div class="row text-center">
  <h2>Liked Blocmarks</h2>
    <% @user_liked_bookmarks_topics.each do |topic| %>
    <div class="col-md-12">
      <strong><%= link_to topic.title, topic %></strong><br />
    </div>
      <% end %>
</div>
